<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/app_bottom_navigation_color</item>
        <item name="android:navigationIcon">@color/app_bottom_navigation_icon_color</item>
        <item name="android:textColorHint">@color/grey_300</item>
        <item name="android:itemBackground">@color/app_background_color</item>
        <item name="android:itemTextAppearance">@style/menu_text_style</item>
        <item name="actionModeBackground">@color/app_background_color</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeCloseDrawable">@drawable/ic_baseline_keyboard_backspace_24</item>
        <item name="actionModeStyle">@style/customActionModeStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

    <style name="menu_font_style">
        <item name="fontFamily">@font/google_sans</item>
    </style>

    <style name="ActionBarTheme" parent="AppTheme.AppBarOverlay">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!-- Set proper title size -->
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <!--  Bottom navigation view style -->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="fontFamily">@font/google_sans</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AuthenticationTheme" parent="FirebaseUI">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customMaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/app_background_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle2</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle2</item>
        <item name="materialAlertDialogBodyTextStyle">@style/materialDialogAlertContentStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialTitleTextStyle</item>
    </style>
    <style name="customMaterialAlertEditDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="android:background">@color/app_background_color</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle2</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle2</item>
        <item name="materialAlertDialogBodyTextStyle">@style/materialDialogAlertContentStyle</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialTitleTextStyle</item>
    </style>
    <style name="NegativeButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/app_inverse_color</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="PositiveButtonStyle2" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/app_blue_color</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="materialDialogAlertContentStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="menu_text_style" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <style name="MaterialTitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:fontFamily">@font/google_sans</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_500</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomMaterialToolbarStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="customActionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="backgroundColor">@color/app_background_color</item>
        <item name="iconTint">@color/app_text_color</item>
        <item name="titleTextStyle">@style/customTitleTextStyle</item>
    </style>

    <style name="customTitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/google_sans</item>
    </style>
    <style name="popupmenu" parent="Base.Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:itemBackground">@color/app_background_color</item>
        <item name="android:popupElevation">50dp</item>
    </style>
</resources>
